<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="sign_up_heading_style">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_navy_blue</item>
    </style>

    <style name="page_heading_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_navy_blue</item>
    </style>

    <style name="calc_input_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="calc_action_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="calc_mem_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:background">@color/snow_white2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>
