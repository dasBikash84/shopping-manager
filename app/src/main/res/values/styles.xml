<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="sign_up_heading_style">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_navy_blue</item>
    </style>

    <style name="page_heading_style">
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_navy_blue</item>
    </style>

    <style name="calc_input_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="calc_action_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="calc_mem_button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_navy_blue</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="more_menu_item">
        <item name="android:background">@color/snow_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/color_navy_blue</item>
    </style>

    <style name="exp_entry_view_title_text">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">100dp</item>>
    </style>

    <style name="exp_entry_view_details_text">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
