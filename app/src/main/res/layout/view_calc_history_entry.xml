<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/snow_white2"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_calc_history_string"
                android:padding="4dp"
                android:gravity="center_vertical|end"
                android:textAlignment="gravity"
                android:textSize="16sp"
                tools:text="@string/calc_history_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_calc_history_result"
                android:padding="4dp"
                android:gravity="center_vertical|end"
                android:textAlignment="gravity"
                android:textColor="@color/color_navy_blue"
                android:textSize="18sp"
                tools:text="@string/calc_history_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>