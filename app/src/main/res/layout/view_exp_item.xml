<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow_white2"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_name_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/exp_item_name_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:minWidth="80dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_item_name_prompt_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_item_name_text"
                    android:textIsSelectable="true"/>

                <com.dasbikash.android_view_utils.custom_views.ClickableImageView
                    android:id="@+id/exp_item_options"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_options"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exp_item_brand_name_holder"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_brand_name_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/exp_item_brand_name_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:minWidth="80dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_brand_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_item_brand_name_prompt_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_item_brand_name_text"
                    android:textIsSelectable="true"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_unit_price_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/unit_cost_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:minWidth="80dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_unit_price_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_item_unit_price_prompt_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/unit_cost_text"
                    android:textIsSelectable="true"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_qty_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/exp_qty_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:minWidth="80dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_qty_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_qty_title_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_qty_title_text"
                    android:textIsSelectable="true"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="4dp"
                    android:id="@+id/tv_exp_item_uom_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_item_qty_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_qty_title_text"
                    android:textIsSelectable="true"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_total_price_prompt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/total_price_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:minWidth="80dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_item_total_price_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_item_total_price_prompt_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/total_price_title"
                    android:textIsSelectable="true"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>