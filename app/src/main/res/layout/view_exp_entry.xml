<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow_white2"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_entry_time_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/entry_time_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_entry_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_entry_time_title_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/entry_time_text"/>

                <com.dasbikash.android_view_utils.custom_views.ClickableImageView
                    android:id="@+id/iv_exp_entry_options"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_options"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:alpha="0.1"
                    android:background="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0.05dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_amount_title_text"
                    style="@style/exp_entry_view_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp_amount_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_amount_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:textAlignment="gravity"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_amount_title_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_amount_title_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:alpha="0.1"
                    android:background="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0.05dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_desc_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/exp_desc_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_desc_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_desc_title_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_desc_title_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:alpha="0.1"
                    android:background="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0.05dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_cat_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_title_text"
                    android:text="@string/exp_cat_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exp_cat_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/exp_entry_view_details_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_exp_cat_title_text"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/exp_cat_title_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>