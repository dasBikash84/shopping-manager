<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/default_page_bg"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

        <com.dasbikash.android_view_utils.custom_views.ClickableImageView
            android:id="@+id/btn_why_login"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_what"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_gravity="end"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_launcher"
            style="@style/primary_button"
            android:layout_width="match_parent"
            android:text="@string/login_launcher_text"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>